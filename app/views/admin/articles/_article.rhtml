<tr <%if article.future?%>class="future"<%end%> >
  <td><%= article.title %></td>
  <td><%= article.created_at.strftime("%d/%m/%Y %H:%M") %></td>
  <td><%= article.is_active ? "YES" : "NO" %></td>
  <td>
    <%= link_to "view", article_path(article), :target => "_blank" %>
    <%= link_to "edit", admin_edit_article_path(article) %>
    <%= link_to "destroy", admin_article_path(article), :method => :delete, :confirm => "Are you sure?" %>
  </td>
</tr>
